@page "/Tenant/Sites/{SiteId:guid}/FloorPlans"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using SBAPro.Core.Entities
@using SBAPro.Infrastructure.Data
@using SBAPro.Core.Interfaces
@using Microsoft.AspNetCore.Components.Forms
@attribute [Authorize(Roles = "TenantAdmin")]
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ITenantService TenantService
@inject NavigationManager NavigationManager
@inject IStringLocalizer<SharedResources> Localizer

<PageTitle>@Localizer["FloorPlans"] - @Localizer["AppName"]</PageTitle>

<h3>@Localizer["FloorPlans"] - @siteName</h3>

<div class="mb-3">
    <button class="btn btn-secondary" @onclick="GoBack">@Localizer["BackToSites"]</button>
    <button class="btn btn-primary" @onclick="ShowUploadForm">@Localizer["UploadFloorPlan"]</button>
</div>

@if (showUploadForm)
{
    <div class="card mb-3">
        <div class="card-header">@(isReUpload ? Localizer["ReUploadFloorPlanImage"] : Localizer["UploadFloorPlan"])</div>
        <div class="card-body">
            <EditForm Model="newFloorPlan" OnValidSubmit="@(isReUpload ? ReUploadFloorPlanImage : UploadFloorPlan)">
                @if (!isReUpload)
                {
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Name"]</label>
                        <InputText class="form-control" @bind-Value="newFloorPlan.Name" />
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <strong>@Localizer["ReUploadingFor"]</strong> @newFloorPlan.Name
                        <br />
                        <small>@Localizer["ReUploadInfo"]</small>
                    </div>
                }
                <div class="mb-3">
                    <label class="form-label">@Localizer["FloorPlanImage"]</label>
                    <InputFile class="form-control" OnChange="HandleFileSelected" accept="image/*" />
                    @if (!string.IsNullOrEmpty(uploadMessage))
                    {
                        <div class="text-info mt-2">@uploadMessage</div>
                    }
                </div>
                <button type="submit" class="btn btn-success" disabled="@(uploadedFile == null)">@(isReUpload ? Localizer["UpdateImage"] : Localizer["Upload"])</button>
                <button type="button" class="btn btn-secondary" @onclick="CancelUpload">@Localizer["Cancel"]</button>
            </EditForm>
        </div>
    </div>
}

@if (floorPlans != null)
{
    <div class="row">
        @foreach (var floorPlan in floorPlans)
        {
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header">
                        <strong>@floorPlan.Name</strong>
                    </div>
                    <div class="card-body">
                        <p><strong>@Localizer["Size"]:</strong> @floorPlan.ImageWidth x @floorPlan.ImageHeight px</p>
                        <p><strong>@Localizer["Objects"]:</strong> @floorPlan.InspectionObjects.Count</p>
                        <div class="btn-group" role="group">
                            <a href="/Tenant/FloorPlans/@floorPlan.Id/Edit" class="btn btn-sm btn-primary">@Localizer["ManageObjects"]</a>
                            <button class="btn btn-sm btn-warning" @onclick="() => ShowReUploadForm(floorPlan)">@Localizer["ReUploadImage"]</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>@Localizer["Loading"]</p>
}

@code {
    [Parameter]
    public Guid SiteId { get; set; }

    private List<FloorPlan>? floorPlans;
    private string siteName = "";
    private bool showUploadForm = false;
    private bool isReUpload = false;
    private FloorPlan newFloorPlan = new();
    private IBrowserFile? uploadedFile;
    private string uploadMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadFloorPlans();
    }

    private async Task LoadFloorPlans()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        var site = await context.Sites
            .Include(s => s.FloorPlans)
                .ThenInclude(fp => fp.InspectionObjects)
            .FirstOrDefaultAsync(s => s.Id == SiteId);

        if (site != null)
        {
            siteName = site.Name;
            floorPlans = site.FloorPlans.ToList();
        }
    }

    private void ShowUploadForm()
    {
        showUploadForm = true;
        isReUpload = false;
        newFloorPlan = new FloorPlan();
        uploadedFile = null;
        uploadMessage = "";
        StateHasChanged();
    }

    private void ShowReUploadForm(FloorPlan floorPlan)
    {
        showUploadForm = true;
        isReUpload = true;
        newFloorPlan = floorPlan;
        uploadedFile = null;
        uploadMessage = "";
        StateHasChanged();
    }

    private void CancelUpload()
    {
        showUploadForm = false;
        isReUpload = false;
        newFloorPlan = new FloorPlan();
        uploadedFile = null;
        uploadMessage = "";
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        uploadedFile = e.File;
        uploadMessage = $"{Localizer["SelectedFile"]} {uploadedFile.Name} ({uploadedFile.Size / 1024} KB)";
    }

    private async Task UploadFloorPlan()
    {
        if (uploadedFile == null) return;

        using var context = await DbFactory.CreateDbContextAsync();

        // Read image data
        var buffer = new byte[uploadedFile.Size];
        await uploadedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024).ReadAsync(buffer);

        // Get image dimensions (simplified - just use defaults for now)
        // In production, you'd want to use an image library to get actual dimensions
        var floorPlan = new FloorPlan
        {
            Id = Guid.NewGuid(),
            Name = newFloorPlan.Name,
            SiteId = SiteId,
            ImageData = buffer,
            ImageMimeType = uploadedFile.ContentType,
            ImageWidth = 1000, // Default width
            ImageHeight = 800  // Default height
        };

        context.FloorPlans.Add(floorPlan);
        await context.SaveChangesAsync();

        showUploadForm = false;
        isReUpload = false;
        await LoadFloorPlans();
    }

    private async Task ReUploadFloorPlanImage()
    {
        if (uploadedFile == null || newFloorPlan.Id == Guid.Empty) return;

        using var context = await DbFactory.CreateDbContextAsync();

        // Find the existing floor plan
        var floorPlan = await context.FloorPlans.FindAsync(newFloorPlan.Id);
        if (floorPlan == null) return;

        // Read new image data
        var buffer = new byte[uploadedFile.Size];
        await uploadedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024).ReadAsync(buffer);

        // Update image data, keeping the same dimensions or use defaults
        floorPlan.ImageData = buffer;
        floorPlan.ImageMimeType = uploadedFile.ContentType;
        // You can optionally update dimensions here if needed
        // floorPlan.ImageWidth = newWidth;
        // floorPlan.ImageHeight = newHeight;

        await context.SaveChangesAsync();

        showUploadForm = false;
        isReUpload = false;
        await LoadFloorPlans();
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/Tenant/Sites");
    }
}
