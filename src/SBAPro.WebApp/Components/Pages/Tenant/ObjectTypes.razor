@page "/Tenant/ObjectTypes"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@using SBAPro.Core.Entities
@using SBAPro.Infrastructure.Data
@using SBAPro.Core.Interfaces
@attribute [Authorize(Roles = "TenantAdmin")]
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ITenantService TenantService
@inject IJSRuntime JSRuntime
@inject IStringLocalizer<SharedResources> Localizer

<PageTitle>@Localizer["ObjectTypes"] - @Localizer["AppName"]</PageTitle>

<h3>@Localizer["InspectionObjectTypes"]</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
    </div>
}

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowCreateForm">@Localizer["AddNewType"]</button>
</div>

@if (showCreateForm)
{
    <div class="card mb-3">
        <div class="card-header">@Localizer["CreateNewObjectType"]</div>
        <div class="card-body">
            <EditForm Model="newType" OnValidSubmit="CreateType">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Name"]</label>
                    <InputText class="form-control" @bind-Value="newType.Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">@Localizer["Icon"] (@Localizer["IconPlaceholder"])</label>
                    <InputText class="form-control" @bind-Value="newType.Icon" placeholder="ðŸ§¯" />
                </div>
                <button type="submit" class="btn btn-success">@Localizer["Create"]</button>
                <button type="button" class="btn btn-secondary" @onclick="CancelCreate">@Localizer["Cancel"]</button>
            </EditForm>
        </div>
    </div>
}

@if (editingType != null)
{
    <div class="card mb-3">
        <div class="card-header">@Localizer["EditObjectType"]</div>
        <div class="card-body">
            <EditForm Model="editingType" OnValidSubmit="SaveEdit">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Name"]</label>
                    <InputText class="form-control" @bind-Value="editingType.Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">@Localizer["Icon"] (@Localizer["IconPlaceholder"])</label>
                    <InputText class="form-control" @bind-Value="editingType.Icon" placeholder="ðŸ§¯" />
                </div>
                <button type="submit" class="btn btn-success">@Localizer["SaveChanges"]</button>
                <button type="button" class="btn btn-secondary" @onclick="CancelEdit">@Localizer["Cancel"]</button>
            </EditForm>
        </div>
    </div>
}

@if (objectTypes != null)
{
    <div class="row">
        @foreach (var type in objectTypes)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@type.Icon @type.Name</h5>
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-primary" @onclick="() => ShowEditForm(type)">@Localizer["Edit"]</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(type)">@Localizer["Delete"]</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>@Localizer["Loading"]</p>
}

@code {
    private List<InspectionObjectType>? objectTypes;
    private bool showCreateForm = false;
    private InspectionObjectType newType = new();
    private InspectionObjectType? editingType = null;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTypes();
    }

    private async Task LoadTypes()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        objectTypes = await context.InspectionObjectTypes.ToListAsync();
    }

    private void ShowCreateForm()
    {
        showCreateForm = true;
        editingType = null;
        newType = new InspectionObjectType();
        errorMessage = string.Empty;
        successMessage = string.Empty;
        StateHasChanged();
    }

    private void CancelCreate()
    {
        showCreateForm = false;
        newType = new InspectionObjectType();
    }

    private async Task CreateType()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        
        var objectType = new InspectionObjectType
        {
            Id = Guid.NewGuid(),
            Name = newType.Name,
            Icon = newType.Icon,
            TenantId = TenantService.GetTenantId()
        };
        
        context.InspectionObjectTypes.Add(objectType);
        await context.SaveChangesAsync();

        showCreateForm = false;
        successMessage = string.Format(Localizer["ObjectTypeCreated"], newType.Name);
        await LoadTypes();
    }

    private void ShowEditForm(InspectionObjectType type)
    {
        showCreateForm = false;
        editingType = new InspectionObjectType
        {
            Id = type.Id,
            Name = type.Name,
            Icon = type.Icon,
            TenantId = type.TenantId
        };
        errorMessage = string.Empty;
        successMessage = string.Empty;
        StateHasChanged();
    }

    private void CancelEdit()
    {
        editingType = null;
    }

    private async Task SaveEdit()
    {
        if (editingType == null) return;

        using var context = await DbFactory.CreateDbContextAsync();
        
        var objectType = await context.InspectionObjectTypes.FindAsync(editingType.Id);
        if (objectType != null)
        {
            objectType.Name = editingType.Name;
            objectType.Icon = editingType.Icon;
            
            await context.SaveChangesAsync();
            successMessage = string.Format(Localizer["ObjectTypeUpdated"], editingType.Name);
        }

        editingType = null;
        await LoadTypes();
    }

    private async Task ConfirmDelete(InspectionObjectType type)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            string.Format(Localizer["DeleteConfirm"], $"{type.Icon} {type.Name}"));
        
        if (confirmed)
        {
            await DeleteType(type.Id);
        }
    }

    private async Task DeleteType(Guid typeId)
    {
        using var context = await DbFactory.CreateDbContextAsync();
        
        // Check if the type is being used
        var objectsCount = await context.InspectionObjects.CountAsync(io => io.TypeId == typeId);
        
        if (objectsCount > 0)
        {
            errorMessage = string.Format(Localizer["CannotDeleteInUse"], objectsCount);
            return;
        }

        var objectType = await context.InspectionObjectTypes.FindAsync(typeId);
        if (objectType != null)
        {
            var typeName = objectType.Name;
            context.InspectionObjectTypes.Remove(objectType);
            await context.SaveChangesAsync();
            successMessage = string.Format(Localizer["ObjectTypeDeleted"], typeName);
            await LoadTypes();
        }
    }
}
